<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.INSOPTAndroidPractice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Widget Style -->
    <style name="Style.Item.Background" parent="">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Style.EditText" parent="">
        <item name="android:background">@drawable/selector_edittext_background</item>
        <item name="android:paddingVertical">@dimen/spacing16</item>
        <item name="android:paddingHorizontal">@dimen/spacing12</item>
        <item name="android:textAppearance">@style/TextAppearance.EditText</item>
    </style>

    <style name="Style.Description.Bold" parent="">
        <item name="android:layout_marginStart">@dimen/spacing12</item>
        <item name="android:textAppearance">@style/TextAppearance.Description</item>
        <item name="android:fontFamily">@font/suit_sb</item>
    </style>

    <style name="Style.Description.Basic" parent="">
        <item name="android:layout_marginTop">@dimen/spacingBase</item>
        <item name="android:textAppearance">@style/TextAppearance.Description</item>
    </style>

    <style name="Style.Button" parent="">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">@dimen/spacing16</item>
    </style>

    <style name="Style.RoundButton" parent="Style.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/selector_button_color</item>
        <item name="android:background">@drawable/shape_border_radius_10</item>
        <item name="android:textAppearance">@style/TextAppearance.RoundButton</item>
    </style>

    <style name="Style.NavigationButton" parent="">
        <item name="android:padding">@dimen/spacingBase</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Divider -->
    <style name="Style.Divider.Basic" parent="">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_200</item>
    </style>

    <style name="Style.Divider.Home.Menu" parent="Style.Divider.Basic">
        <item name="android:layout_marginTop">@dimen/spacing10</item>
    </style>

    <!-- CircleImageView -->
    <style name="Style.CircleImageView.Half" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Style.CircleImageView.Radius.12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12%</item>
    </style>

    <!-- TextAppearance -->
    <style name="TextAppearance.TextView.Label" parent="">
        <item name="android:textSize">@dimen/typographyDescription</item>
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:fontFamily">@font/suit_m</item>
    </style>

    <style name="TextAppearance.EditText" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:fontFamily">@font/suit_m</item>
    </style>

    <style name="TextAppearance.RoundButton" parent="">
        <item name="android:textSize">@dimen/typographyDescription</item>
        <item name="android:textColor">@color/selector_button_text_color</item>
        <item name="android:fontFamily">@font/suit_sb</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="">
        <item name="android:textSize">@dimen/typographyBase</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:fontFamily">@font/suit_sb</item>
    </style>

    <style name="TextAppearance.Title.Basic" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:fontFamily">@font/suit_sb</item>
    </style>

    <style name="TextAppearance.Title.Large" parent="">
        <item name="android:fontFamily">@font/montserrat_b</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.Description" parent="">
        <item name="android:textSize">@dimen/typographyDescription</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:fontFamily">@font/suit_r</item>
    </style>

    <style name="TextAppearance.Detail" parent="">
        <item name="android:textSize">@dimen/typographyDescription</item>
        <item name="android:textColor">@color/pink_500</item>
        <item name="android:fontFamily">@font/suit_r</item>
    </style>
</resources>